<mvc:View xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns:filterbar="sap.ui.comp.filterbar"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:uxap="sap.uxap"
    controllerName="bd.businessportal.controller.Shippers"
    >
      <Page
        id="shipper_page"
        title="Shippers"
        busyIndicatorDelay="100"
        showNavButton="false"
        class="sapUiResponsiveMargin--content"
    >
        <Panel expandable="false" stickyHeader="false" width="auto">
             <f:GridList items="{/results}" id="table_shipper">
                 <f:customLayout>
                     	<grid:GridResponsiveLayout layoutChange="onLayoutChange">
                                <grid:layout>
                                    <grid:GridSettings gridTemplateColumns="repeat(auto-fit, minmax(220px,250px))" gridGap="0.8rem"></grid:GridSettings>
                                </grid:layout>
                            </grid:GridResponsiveLayout>
                 </f:customLayout>
                <f:GridListItem  type="Active" press=".overViewPage">
                    <VBox class="sapUiSmallMargin" gap="0.8rem">
                        <ObjectIdentifier title="{CompanyName}"></ObjectIdentifier>
                        <Text text="ShipperID : {ShipperID}" wrapping="false" ></Text>
                        <ObjectStatus text="Phone : {Phone}" inverted="true" state="None" icon="sap-icon://contacts" />
                    </VBox>         
            </f:GridListItem>
             </f:GridList>
        </Panel>
    </Page>


<mvc:View xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns:filterbar="sap.ui.comp.filterbar" controllerName="bd.businessportal.controller.Regions"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    >

     <Page
        id="region_page"
        title="Regions"
        busyIndicatorDelay="100"
        showNavButton="false"
        class="sapUiResponsiveMargin--content"
    >

    <Panel expandable="false" width="auto">
        <f:GridList items="{/results}" id="table_region">
                <f:customLayout>
                    <grid:GridResponsiveLayout>
                                <grid:layout>
                                    <grid:GridSettings gridTemplateColumns="repeat(auto-fit, minmax(220px,250px))" gridGap="0.8rem"></grid:GridSettings>
                                </grid:layout>
                            </grid:GridResponsiveLayout>
                </f:customLayout>
            <f:GridListItem type="Active"  press='.overViewPage' >
                <HBox class="sapUiSmallMargin sapUiResoinsivePadding" justifyContent="SpaceBetween">

                    <VBox  gap="0.8rem">
                        <ObjectIdentifier title="{RegionDescription}"></ObjectIdentifier>
                        <Text text="RegionID : {RegionID}" wrapping="false" ></Text>
                    </VBox>
                    <VBox gap="0.8rem">
                        <ObjectNumber  number="{=${Territories/results}.length}" unit="" state="None">
                            <layoutData>
                                <FlexItemData alignSelf="Center"></FlexItemData>
                            </layoutData>
                            </ObjectNumber>
                        <Text text="Terretories"/>
                    </VBox>
                </HBox>
            </f:GridListItem>
        </f:GridList>


    </Panel>
    


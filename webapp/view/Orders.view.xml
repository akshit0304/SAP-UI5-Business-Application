<mvc:View xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns:filterbar="sap.ui.comp.filterbar" controllerName="bd.businessportal.controller.Orders"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    >
    <uxap:ObjectPageLayout id="order_page" class="sapUiSmallMarginBottom sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
    enableLazyLoading="true"
    beforeNavigate=".navbuttonPressed"
    useIconTabBar="true"
    showTitleInHeaderContent="true"
    upperCaseAnchorBar="true"
    showAnchorBar="false"
    >

        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle >
                <uxap:snappedHeading>
                    <Title text="Orders" wrapping="false" titleStyle="H1" />
                </uxap:snappedHeading>
                <uxap:expandedHeading>
                    <Title text="Orders" wrapping="false" titleStyle="H3" />
                </uxap:expandedHeading>

                <uxap:snappedContent>
                    <Text text="" wrapping="true" maxLines="3" />
                </uxap:snappedContent>
                    <uxap:expandedContent>
                        <Text text="" wrapping="true" maxLines="3" />
                    </uxap:expandedContent>

                    <uxap:actions>
                        <Toolbar style="Clear">
                            <ToolbarSpacer/>
                                <Button  icon="sap-icon://action" iconFirst="true"  press="{=null}" />
                        </Toolbar>
                    </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>

        <uxap:headerContent>
            <!-- entet filter bar -->
             <filterbar:FilterBar id="filterbar_order" useToolbar="false" showRestoreButton="false" showGoOnFB="true" >
                    <filterbar:filterGroupItems>
                        <filterbar:FilterGroupItem  name="search" label="" groupName="q"  visibleInFilterBar="true">
                            <filterbar:control>
                                <SearchField placeholder="search" showSearchButton="true"/>
                            </filterbar:control>
                        </filterbar:FilterGroupItem>
                        <!-- 2 -->
                        <filterbar:FilterGroupItem  name="order" label="Order" groupName="q"  visibleInFilterBar="true">
                            <filterbar:control>
                               <Input showValueHelp="true" showSuggestion="false" type="Text" showClearIcon="false"></Input>
                            </filterbar:control>
                        </filterbar:FilterGroupItem>

                    </filterbar:filterGroupItems>
             </filterbar:FilterBar>
        </uxap:headerContent>

        <!-- block content -->
         <uxap:sections>
            <uxap:ObjectPageSection  showTitle="false">
                <!-- <uxap:customAnchorBarButton>
                    <Button text="Manager Data"></Button>
                </uxap:customAnchorBarButton> -->
                <uxap:ObjectPageSubSection  showTitle="false" >
                    <uxap:blocks>

                                        <Table 
                                            id="table_order"
                                            headerText="Orders"
                                            autoPopinMode="false"
                                            width="100%"
                                            inset="false"
                                            busy="false"
                                            busyIndicatorDelay="100"
                                            items="{/results}"
                                            sticky="ColumnHeaders"
                                            rememberSelections="true"
                                        >
                                        <columns>
                                            <Column  demandPopin="false" minScreenWidth="Phone">
                                                <Text wrapping="true" text="Customer Name"></Text>
                                            </Column>

                                            <Column  demandPopin="true" minScreenWidth="Phone" width="auto" >
                                                <Text wrapping="true" text="Employee Name"/>
                                            </Column>

                                            <Column   demandPopin="true" minScreenWidth="Tablet" width="auto" hAlign="Center">
                                                <Text wrapping="true" text="Order Date"/>
                                            </Column>
                                            <Column   demandPopin="true" minScreenWidth="Tablet" width="auto" hAlign="Center">
                                                <Text wrapping="true" text="Shipped Date"/>
                                            </Column>

                                            <Column   demandPopin="true" minScreenWidth="Desktop" width="auto">
                                                <Text wrapping="true" text="ShipperName"/>
                                            </Column>

                                            <Column   demandPopin="true" minScreenWidth="Desktop" width="auto">
                                                <Text wrapping="true" text="Region"/>
                                            </Column>

                                            <Column   demandPopin="true" minScreenWidth="Desktop" width="auto">
                                                <Text wrapping="true" text="City"/>
                                            </Column>

                                            <Column   demandPopin="true" minScreenWidth="Tablet" width="auto" hAlign="Right">
                                                <Text wrapping="true" text="Postal Code"/>
                                            </Column>
                                        </columns>
                                        <items>

                                            <ColumnListItem type="Navigation" vAlign="Middle" press=".overViewPage">
                                                <cells>
                                                  
                                                    <Text text="{Customer/ContactName}" maxLines="3"/>
                                                    <Text text="{Employee/FirstName}" maxLines="3"/>
                                                    <Text text="{path:'OrderDate',formatter:'.formatter.parseDate'}" maxLines="3"/>
                                                    <Text text="{path:'ShippedDate',formatter:'.formatter.parseDate'}" maxLines="3"/>
                                                    <Text text="{path:'ShipName'}" maxLines="3"/>
                                                    <Text text="{path:'ShipRegion',formatter:'.formatter.emptyDataHandle'}" maxLines="3"/>
                                                    <Text text="{ShipCity}"/>
                                                    <Text text="{ShipPostalCode}"/>
                                                    <!-- <ObjectNumber  number="{Phone}" unit="" state="Information" inverted="true"/> -->

                                                    
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                    </uxap:blocks>
                </uxap:ObjectPageSubSection>
            </uxap:ObjectPageSection>
         </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
<mvc:View
xmlns:core="sap.ui.core"
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc"
xmlns:l="sap.ui.layout"
xmlns:form="sap.ui.layout.form"
controllerName="bd.businessportal.controller.RegionsOverview"
>
<!-- Page start -->
<Page 
    id="region_overview"  
    title="{RegionDescription}"
    busyIndicatorDelay="300"
    class="sapUiResponsiveMargin--content sapUiResponsivePadding--header
            sapUiResponsiveContentPadding"
    >
    <Panel id="r_dynamicPageTitle" expandable="false" stickyHeader="false" width="auto" headerText="{TerritoryDescription}" class="">
        <!-- <headerToolbar>
            <OverflowToolbar design="Transparent">
                <Title class="sapUiSmallMarginBegin" text="Region Data"/>
                <ToolbarSpacer />
                <Button icon="sap-icon://action" iconFirst="true" press=".shareButton"/>
            </OverflowToolbar>
        </headerToolbar> -->
        <content>
            <HBox columnGap="1.6rem" wrap="NoWrap"  class="theme-color box-border sapUiSmallMarginBegin sapUiResponsivePadding">
                <VBox alignItems="Center" class="sapUiTinyMargin" columnGap="10px">
                    <Avatar displaySize="S" src="sap-icon://world" displayShape="Circle" imageFitType="Cover"/>
                    <HBox columnGap="10px" alignItems="Center" wrap="Wrap" alignContent="Center">
                        <ObjectStatus stateAnnouncementText="Region ID" class="sapMObjectStatusLongText" text="Region ID"/>
                        <ObjectStatus class="" inverted="false" state="Success" text="{RegionID}"/>
                    </HBox>
                </VBox>
                <!-- description -->
                <VBox alignItems="Center" class="sapUiTinyMargin" columnGap="10px">
                    <Avatar displaySize="S" src="sap-icon://legend" displayShape="Circle" imageFitType="Cover"/>
                    <HBox columnGap="10px" alignItems="Center" wrap="Wrap" alignContent="Center">
                        <ObjectStatus stateAnnouncementText="Region Name" class="sapMObjectStatusLongText" text="Name"/>
                        <ObjectStatus class="sapMObjectStatusLongText" state="None" text="{RegionDescription}"/>
                    </HBox>
                </VBox>
                <!-- territories -->
                <VBox alignItems="Center" class="sapUiTinyMargin" columnGap="10px">
                    <Avatar displaySize="S" src="sap-icon://activity-items" displayShape="Circle" imageFitType="Cover"/>
                    <HBox columnGap="10px" alignItems="Center" wrap="Wrap" alignContent="Center">
                        <ObjectStatus stateAnnouncementText="No Territories" class="sapMObjectStatusLongText" text="No. Territories"/>
                        <ObjectStatus class="sapMObjectStatusLongText" inverted="false" state="Information" text="{noTerritories}"/>
                    </HBox>
                </VBox>
                
            </HBox>
            <!-- <HBox justifyContent="Center"> -->
            <Table 
                        id="table_1_region_overview"
                        headerText="Associate Territories"
                        autoPopinMode="false"
                        inset="false"
                        busy="false"
                        busyIndicatorDelay="100"
                        items="{/results/0/Territories/results}"
                        
                    >
                    <columns>
                        <Column visible="true"  minScreenWidth="Phone" width="30px" hAlign="Right">
                            <Text wrapping="true" text="Id" maxLines="3" tooltip="Territory ID"/>
                        </Column>

                        <Column  demandPopin="false" minScreenWidth="Phone" width="60px">
                            <Text wrapping="false" text="Name"/>
                        </Column>
                    </columns>
                    <items>

                        <ColumnListItem type="Inactive">
                            <cells>
                                <ObjectNumber number="{TerritoryID}" unit="" state="None" ></ObjectNumber>
                                <Text text="{TerritoryDescription}" maxLines="3"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <!-- table end -->
            <!-- </HBox> -->
                        
        </content>
    </Panel>

           
</Page>

</mvc:View>
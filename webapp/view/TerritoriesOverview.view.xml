<mvc:View
xmlns:core="sap.ui.core"
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc"
xmlns:l="sap.ui.layout"
xmlns:form="sap.ui.layout.form"
controllerName="bd.businessportal.controller.TerritoriesOverview"
>
<!-- Page start -->
<Page 
    id="territory_overview"  
    title="{TerritoryDescription}" 
    busyIndicatorDelay="300"
    class="sapUiResponsiveMargin--content sapUiResponsivePadding--header
            sapUiResponsiveContentPadding"
    >
    <Panel id="t_dynamicPageTitle" expandable="false" stickyHeader="false" headerText="{TerritoryDescription}" width="auto" >
        <!-- <headerToolbar>
            <OverflowToolbar design="Transparent">
                <Title text="Territory Data"/>
                <ToolbarSpacer />
                <Button icon="sap-icon://action" iconFirst="true" press=".shareButton"/>
            </OverflowToolbar>
        </headerToolbar> -->
        <content>
            <HBox wrap="Wrap" columnGap="1.6rem"  rowGap="1rem" alignContent="Center"   class="sapUiSmallMarginBegin sapUiResponsivePadding theme-color box-border">
                <VBox alignItems="Center" class="sapUiTinyMargin" columnGap="10px" wrap="Wrap" alignContent="Center" width="140px">
                    <Avatar displaySize="S" src="sap-icon://world" displayShape="Circle" imageFitType="Cover"/>
                    <HBox columnGap="10px" justifyContent="Center"  wrap="Wrap" alignContent="Center">
                        <ObjectStatus  class="sapMObjectStatusLongText" text="Territory ID"/>
                        <ObjectStatus class="sapMObjectStatusLongText"  state="Success" text="{TerritoryID}"/>
                    </HBox>
                </VBox>
                <!-- description -->
                <VBox alignItems="Center" class="sapUiTinyMargin" columnGap="10px" width="140px">
                    <Avatar displaySize="S" src="sap-icon://legend" displayShape="Circle" imageFitType="Cover"/>
                    <HBox columnGap="10px" justifyContent="Center"  wrap="Wrap" alignContent="Center">
                        <ObjectStatus  class="sapMObjectStatusLongText"  text="Name"/>
                        <ObjectStatus class="sapMObjectStatusLongText"  state="None" text="{TerritoryDescription}"/>
                    </HBox>
                </VBox>
                <!-- territories -->
                <VBox wrap="Wrap" alignItems="Center" class="sapUiTinyMargin" columnGap="10px" width="140px">
                    <Avatar displaySize="S" src="sap-icon://activity-items" displayShape="Circle" imageFitType="Cover"/>
                    <HBox columnGap="10px"  justifyContent="Center" wrap="Wrap" alignContent="Center">
                        <ObjectStatus  class="sapMObjectStatusLongText" text="Region"/>
                        <ObjectStatus class="sapMObjectStatusLongText"  state="Information" text="{Region/RegionDescription}"/>
                    </HBox>
                </VBox>
                <!-- assiciate person -->
                <VBox alignItems="Center" class="sapUiTinyMargin" columnGap="10px" width="140px">
                    <Avatar displaySize="S" src="sap-icon://business-card" displayShape="Circle" imageFitType="Cover"/>
                    <HBox columnGap="10px"  wrap="Wrap" justifyContent="Center" alignContent="Center">
                        <ObjectStatus class="sapMObjectStatusLongText" text="Head Person"/>
                        <ObjectStatus class="sapMObjectStatusLongText"  state="None" text="{Employees/results/0/FirstName}-{Employees/results/0/EmployeeID}"/>
                    </HBox>
                </VBox>
            </HBox>
        </content>
    </Panel>
   
</Page>

</mvc:View>
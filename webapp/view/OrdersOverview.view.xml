<mvc:View xmlns:table="sap.ui.table"
xmlns:core="sap.ui.core"
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc"
xmlns:l="sap.ui.layout"
xmlns:form="sap.ui.layout.form"
xmlns:cards="sap.f.cards"
xmlns:f="sap.f"
controllerName="bd.businessportal.controller.OrdersOverview"
>
<!-- Page start -->
<Page 
    id="order_overview"  
    title="Orders Detail" 
    busyIndicatorDelay="100"
    showNavButton="false"
    class="sapUiResponsiveMargin--content
            sapUiResponsiveContentPadding"
    >
    <Panel id="order_overview_panel" expandable="false" stickyHeader="false" headerText="Order #{OrderID}" width="auto">
        <content>
            <!-- dymanic binding from controller -->
             <form:SimpleForm 
                    layout="ColumnLayout" id="info_order"
                        columnsXL="-1"
                        columnsL="2"
                        columnsM="2"
                        labelSpanXL="-1"
                        labelSpanL="3"
                        labelSpanM="2"
                        labelSpanS="12"
                        emptySpanXL="0"
                        adjustLabelSpan="false"
                        width="auto"
                >
               
                <!-- <form:title>
                    <core:Title text="" />
                </form:title> -->
                    <form:content>
                        <Label text="ID" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{OrderID}" class="sapUiTinyMarginBottom"/>
                        <Label text="Customer ID" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{CustomerID}" class="sapUiTinyMarginBottom"/>
                        <Label text="Employee ID" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{EmployeeID}" class="sapUiTinyMarginBottom"/>

                    </form:content>

                    <!-- column 2 -->
                     <form:content>
                        <Label text="Order Date" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{path:'OrderDate',formatter:'.formatter.parseDate'}" class="sapUiTinyMarginBottom"/>
                        <Label text="Last Date" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{path:'RequiredDate',formatter:'.formatter.parseDate'}" class="sapUiTinyMarginBottom"/>
                        <Label text="Shipped Date" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{path:'ShippedDate',formatter:'.formatter.parseDate'}" class="sapUiTinyMarginBottom"/>

                    </form:content>
                </form:SimpleForm>
    <!-- customer data -->
     <HBox width="100%">
        <form:SimpleForm 
                        layout="ColumnLayout" id="o_customer"
                        columnsXL="-1"
                        columnsL="2"
                        columnsM="2"
                        labelSpanXL="-1"
                        labelSpanL="3"
                        labelSpanM="2"
                        labelSpanS="12"
                        emptySpanXL="0"
                        adjustLabelSpan="false"
                            width="auto"
                >

                 <form:title>
                    <core:Title text="Customer Info" />
                </form:title>
                <form:content>
                        <Label text="Company" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{Customer/CompanyName}" class="sapUiTinyMarginBottom"/>

                        <Label text="Contact Person" showColon="true" vAlign="Middle"  displayOnly="true" wrapping="true" />
                        <Text  text="{Customer/ContactName}" class="sapUiTinyMarginBottom"/>

                        <Label text="Phone" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{Customer/Phone}" class="sapUiTinyMarginBottom"/>

                        <Label text="Location" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{Customer/City} ({Customer/Country})" class="sapUiTinyMarginBottom"/>

                        <Label text="ID" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{Customer/CustomerID}" class="sapUiTinyMarginBottom"/>
                </form:content>
            </form:SimpleForm>
     </HBox>
    
    <!-- forms data shipments -->
            <HBox width="100%">
               <form:SimpleForm 
                    layout="ColumnLayout" id="shipments"
                        columnsXL="-1"
                        columnsL="2"
                        columnsM="2"
                        labelSpanXL="-1"
                        labelSpanL="3"
                        labelSpanM="2"
                        labelSpanS="12"
                        emptySpanXL="0"
                        adjustLabelSpan="false"
                            width="auto"
                >
               
                <form:title>
                    <core:Title text="Shipment Info" />
                </form:title>
                    <form:content>
                       
                        <Label text="Shipper Name" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{ShipName}" class="sapUiTinyMarginBottom"/>

                        <Label text="Item Freight" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{Freight}" class="sapUiTinyMarginBottom"/>

                         <Label text="Shipper ID" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{ShipVia}" class="sapUiTinyMarginBottom"/>

                        <Label text="Address" showColon="true" vAlign="Middle"  displayOnly="true" tooltip="Delievery Address" />
                        <Text  text="{ShipAddress}" class="sapUiTinyMarginBottom"/>

                        <Label text="City" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{ShipCity}" class="sapUiTinyMarginBottom"/>

                        <Label text="Country" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{ShipCountry}" class="sapUiTinyMarginBottom"/>

                        <Label text="Region" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{ShipRegion}" class="sapUiTinyMarginBottom" emptyIndicatorMode="On"/>

                        <Label text="Postal Code" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{ShipPostalCode}" class="sapUiTinyMarginBottom"/>
                    </form:content>
                </form:SimpleForm> 
            </HBox>
        <!-- form end -->

        <!-- order processing specialist -->
         <HBox width="100%">
             <form:SimpleForm 
                    layout="ColumnLayout" id="o_employee"
                        columnsXL="-1"
                        columnsL="2"
                        columnsM="2"
                        labelSpanXL="-1"
                        labelSpanL="3"
                        labelSpanM="2"
                        labelSpanS="12"
                        emptySpanXL="0"
                        adjustLabelSpan="false"
                            width="auto"
                >
                <form:layoutData>
                    <FlexItemData growFactor="1" shrinkFactor="1" />
                </form:layoutData>
                 <form:title>
                    <core:Title tooltip="order managed by this employee" text="Order Processing Specialist" />
                </form:title>
                <form:content>
                        <Label text="Name" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{Employee/TitleOfCourtesy} {Employee/FirstName}" class="sapUiTinyMarginBottom"/>

                        <Label text="Role" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{Employee/Title}" class="sapUiTinyMarginBottom"/>

                        <Label text="ID" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Text  text="{Employee/EmployeeID}" class="sapUiTinyMarginBottom"/>

                        <Label text="" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Label text="" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <Label text="" showColon="true" vAlign="Middle"  displayOnly="true"  />
                        <!-- <Text  text="{Employee/EmployeeID}" class="sapUiTinyMarginBottom"/> -->
                </form:content>
                </form:SimpleForm>
         </HBox>


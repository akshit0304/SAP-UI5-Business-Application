<mvc:View xmlns:home="sap.cux.home" xmlns:l="sap.ui.layout" displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:cards="sap.f.cards"
    xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz="sap.viz.ui5.controls" controllerName="bd.businessportal.controller.Dashboard">

    <Page class="sapUiResponsiveMargin--content" id="dashboard_page" title="Business KPIs">
        <!-- grid-start -->
       <l:Grid id="main_grid" hSpacing="1" vSpacing="1"
                class="sapUiSmallMarginTopBottom"
       >
                            <!-- card-1 -->
                <f:Card height="400px"  id="product_manage">
                    <f:layoutData>
                                <l:GridData span="XL3 L4 M5 S12"/>
                    
                    </f:layoutData>
                        <f:header>
                            <cards:Header title="Statistics" subtitle="Stat of products,orders and sales | LIQUIDITY">
                            </cards:Header>
                        </f:header>
                        <f:content>
                            <ScrollContainer horizontal="false" vertical="true" height="auto" width="100%"  class="">
                                <List id="kpi_stat_list" showSeparators="None" width="auto"  class="sapUiTinyMarginEnd" items="{Mkpi>/ProductStat}">
                                    <items>
                                    <CustomListItem navigated="false" type="Inactive" class="sapUiTinyMarginBottom">
                                        <HBox alignItems="Start"  justifyContent="SpaceBetween" width="auto" class="sapUiTinyMargin">
                                            <VBox class="sapUiTinyMarginBegin">
                                                <layoutData>
                                                    <FlexItemData  baseSize="60%" shrinkFactor="1" growFactor="1" ></FlexItemData>
                                                </layoutData>
                                                <Text wrapping="false" text="{Mkpi>Title}" />
                                                <Label text="{Mkpi>Description}" displayOnly="true" wrapping="true"/>
                                            </VBox>
                                            <VBox alignItems="End" class="" width="20%">
                                            <layoutData>
                                                <FlexItemData alignSelf="Center"/>
                                            </layoutData>
                                            <ObjectNumber  number="{path:'Mkpi>Data'}" state="Success"/>
                                             <Text text="{Mkpi>Unit}"  class="fontsize-S" />
                                            </VBox>
                                        </HBox>
                                    </CustomListItem>
                                   
                                    </items>
                                </List>
                            </ScrollContainer>
                        </f:content>
                    </f:Card>

                     <!-- card-2 -->
        <f:Card  id="charts" width="100%" height="400px">
 
					  <f:layoutData>
                                <l:GridData span="XL6 L6 M7 S12"/>
                    </f:layoutData>
            <f:header>
                <cards:Header  title="Top 5 Customers" subtitle="Top 5 customers by order value | EUR">
                </cards:Header>
            </f:header>
            <f:content>
                <viz:VizFrame
                    id="donutChart"
                    width="100%"
                    height="auto"
                    uiConfig="{applicationSet:'fiori'}"
                    vizType="donut"
                    >
                    <viz:dataset>
                        <viz.data:FlattenedDataset
                        data="{Mkpi>/TopCustomers}" >
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition
                            axis="1"
                            name="Customer"
                            value="{Name}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition
                            name="OrderAmount"
                            value="{subTotal}" />

                         <viz.data:MeasureDefinition
                            name="Customer ID"
                            value="{Id}" />
                        </viz.data:measures>
                        </viz.data:FlattenedDataset>
                    </viz:dataset>

                    <viz:feeds>
                        <viz.feeds:FeedItem
                        uid="size"
                        type="Measure"
                        values="OrderAmount" />
                        <viz.feeds:FeedItem
                        uid="color"
                        type="Dimension"
                        values="Customer" />
                    </viz:feeds>
                </viz:VizFrame>
            </f:content>
        </f:Card>
        <!-- card-3 -->
             <f:Card class="asset" height="400px" >
                    <f:layoutData>
                                <l:GridData span="XL3 L4 M5 S12"/>
                    
                    </f:layoutData>
                        <f:header>
                            <cards:Header title="Company Stats" subtitle="Statistics of Employees, Officials ,Customers">
                            </cards:Header>
                        </f:header>
                        <f:content>
                            <ScrollContainer horizontal="false" vertical="true" height="auto" width="100%" >
                                <List  showSeparators="None" width="auto"  class="sapUiTinyMarginEnd" items="{Mkpi>/CompanyStat}">
                                    <items>
                                    <CustomListItem navigated="false" type="Inactive" class="sapUiTinyMarginBottom">
                                        <HBox alignItems="Start" justifyContent="SpaceBetween" width="auto" class="sapUiTinyMargin">
                                            <VBox class="sapUiTinyMarginBegin">
                                                <layoutData>
                                                    <FlexItemData baseSize="60%" growFactor="1" ></FlexItemData>
                                                </layoutData>
                                                <Text wrapping="false" text="{Mkpi>Title}" />
                                                <Label text="{Mkpi>Description}" displayOnly="true" wrapping="true" />
                                            </VBox>
                                            <VBox alignItems="End" class="" width="20%">
                                            <layoutData>
                                                <FlexItemData alignSelf="Center"/>
                                            </layoutData>
                                            <ObjectNumber class="" number="{Mkpi>Data}" state="Success"/>
                                             <Text text="{Mkpi>Unit}" class="fontsize-S" />
                                            </VBox>
                                        </HBox>
                                    </CustomListItem>
                                   
                                    </items>
                                </List>
                            </ScrollContainer>
                        </f:content>
                    </f:Card>


        <!-- card-4 -->
          <f:Card  id="shipper_chart" width="100%" height="350px">
 
					  <f:layoutData>
                                <l:GridData span="XL5 L5 M6 S12" />
                    </f:layoutData>
            <f:header>
                <cards:Header  title="Shipper Orders Chart" subtitle="Total Delivery Orders by Shippers">
                </cards:Header>
            </f:header>
            <f:content>
                <viz:VizFrame
                    id="shipper_column_chart"
                    width="100%"
                    height="auto"
                    uiConfig="{applicationSet:'fiori'}"
                    vizType="column"
                    >
                    <viz:dataset>
                        <viz.data:FlattenedDataset
                        data="{path:'Mkpi>/ShipperKPI'}" >
                        


                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition
                            name="Shipper Name"
                            displayValue="Shipper Name"
                            value="{Mkpi>CompanyName}" />
                        </viz.data:dimensions>


                        <viz.data:measures>
                            <viz.data:MeasureDefinition
                            name="Order Managed"
                            value="{Mkpi>SettledOrders}" />
                              <!-- <viz.data:MeasureDefinition
                            name="Color"
                            value="{Mkpi>color}" /> -->
                        </viz.data:measures>
                        </viz.data:FlattenedDataset>
                    </viz:dataset>

                    <viz:feeds>
                        <viz.feeds:FeedItem
                        uid="categoryAxis"
                        type="Dimension"
                        values="Shipper Name" />
                        <!-- <viz.feeds:FeedItem uid="color" type="Measure" values="Color"/> -->
                        <viz.feeds:FeedItem
                        uid="valueAxis"
                        type="Measure"
                        values="Order Managed" />

                         <!-- <viz.feeds:FeedItem
                        uid="color"
                        type="Measure"
                        values="Order Fullfillment" /> -->
                    </viz:feeds>
                </viz:VizFrame>
            </f:content>
        </f:Card>
       </l:Grid>

    </Page>


</mvc:View>
<mvc:View xmlns:l="sap.ui.layout" displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:cards="sap.f.cards"
    xmlns="sap.m"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:core="sap.ui.core"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz="sap.viz.ui5.controls" controllerName="bd.businessportal.controller.Dashboard">

    <Page class="sapUiResponsiveMargin--content" id="dashboard_page" title="Business KPIs">
        <!-- grid-start -->
       <l:Grid id="main_grid" hSpacing="1" vSpacing="0.5"
                class="sapUiSmallMarginTopBottom"
       >
                            <!-- card-1 -->
                <f:Card class="" >
                    <f:layoutData>
                                <l:GridData span="XL3 L3 M5 S12"/>
                    
                    </f:layoutData>
                        <f:header>
                            <cards:Header title="Statistics" subtitle="Stat of products,orders and sales | LIQUIDITY">
                            </cards:Header>
                        </f:header>
                        <f:content>
                            <ScrollContainer horizontal="false" vertical="true" height="auto" width="100%"  class="">
                                <List id="kpi_stat_list" showSeparators="None" width="auto"  class="sapUiTinyMarginEnd" items="{Mkpi>/ProductStat}">
                                    <items>
                                    <CustomListItem navigated="false" type="Inactive" class="sapUiTinyMarginBottom">
                                        <HBox alignItems="Start" justifyContent="SpaceBetween" width="auto" class="sapUiTinyMargin">
                                            <VBox class="sapUiTinyMarginBegin">
                                                <layoutData>
                                                    <FlexItemData maxWidth="80%" ></FlexItemData>
                                                </layoutData>
                                                <Text wrapping="false" text="{Mkpi>Title}" />
                                                <Label text="{Mkpi>Description}" displayOnly="true" wrapping="true" />
                                            </VBox>
                                            <VBox alignItems="End" class="" width="20%">
                                            <layoutData>
                                                <FlexItemData alignSelf="Center"/>
                                            </layoutData>
                                            <ObjectNumber class="" number="{Mkpi>Data}" state="Success"/>
                                             <Text text="{Mkpi>Unit}" />
                                            </VBox>
                                        </HBox>
                                    </CustomListItem>
                                   
                                    </items>
                                </List>
                            </ScrollContainer>
                        </f:content>
                    </f:Card>

                     <!-- card-2 -->
        <f:Card class="" id="charts" width="100%" >
 
					  <f:layoutData>
                                <l:GridData span="XL6 L6 M7 S12"/>
                    </f:layoutData>
            <f:header>
                <cards:Header  title="Top 5 Customers" subtitle="Top 5 customers by order value | EUR">
                </cards:Header>
            </f:header>
            <f:content>
                <viz:VizFrame
                    id="donutChart"
                    width="100%"
                    height="400px"
                    uiConfig="{applicationSet:'fiori'}"
                    vizType="donut"
                    >

                    <viz:dataset>
                        <viz.data:FlattenedDataset
                        data="{/customers}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition
                            name="Customer"
                            value="{customerName}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition
                            name="Order Amount"
                            value="{orderAmount}" />
                        </viz.data:measures>
                        </viz.data:FlattenedDataset>
                    </viz:dataset>

                    <viz:feeds>
                        <viz.feeds:FeedItem
                        uid="size"
                        type="Measure"
                        values="Order Amount" />
                        <viz.feeds:FeedItem
                        uid="color"
                        type="Dimension"
                        values="Customer" />
                    </viz:feeds>
                </viz:VizFrame>
            </f:content>
        </f:Card>
        <!-- card-3 -->
             <f:Card class="asset" >
                    <f:layoutData>
                                <l:GridData span="XL3 L3 M5 S12"/>
                    
                    </f:layoutData>
                        <f:header>
                            <cards:Header title="Company Stats" subtitle="Statistics of Employees, Officials ,Customers">
                            </cards:Header>
                        </f:header>
                        <f:content>
                            <ScrollContainer horizontal="false" vertical="true" height="auto" width="100%"  class="">
                                <List  showSeparators="None" width="auto"  class="sapUiTinyMarginEnd" items="{Mkpi>/CompanyStat}">
                                    <items>
                                    <CustomListItem navigated="false" type="Inactive" class="sapUiTinyMarginBottom">
                                        <HBox alignItems="Start" justifyContent="SpaceBetween" width="auto" class="sapUiTinyMargin">
                                            <VBox class="sapUiTinyMarginBegin">
                                                <layoutData>
                                                    <FlexItemData maxWidth="80%" ></FlexItemData>
                                                </layoutData>
                                                <Text wrapping="false" text="{Mkpi>Title}" />
                                                <Label text="{Mkpi>Description}" displayOnly="true" wrapping="true" />
                                            </VBox>
                                            <VBox alignItems="End" class="" width="20%">
                                            <layoutData>
                                                <FlexItemData alignSelf="Center"/>
                                            </layoutData>
                                            <ObjectNumber class="" number="{Mkpi>Data}" state="Success"/>
                                             <Text text="{Mkpi>Unit}" />
                                            </VBox>
                                        </HBox>
                                    </CustomListItem>
                                   
                                    </items>
                                </List>
                            </ScrollContainer>
                        </f:content>
                    </f:Card>
       </l:Grid>

    </Page>


</mvc:View>
<mvc:View xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns:filterbar="sap.ui.comp.filterbar" controllerName="bd.businessportal.controller.Territories"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    >
    <uxap:ObjectPageLayout id="territory_page" class="sapUiSmallMarginBottom sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
    enableLazyLoading="true"
    beforeNavigate=".navbuttonPressed"
    useIconTabBar="true"
    showTitleInHeaderContent="true"
    upperCaseAnchorBar="true"
    showAnchorBar="false"
    >

        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle >
                <uxap:snappedHeading>
                    <Title text="Territories" wrapping="false" titleStyle="H1" />
                </uxap:snappedHeading>
                <uxap:expandedHeading>
                    <Title text="Territories" wrapping="false" titleStyle="H3" />
                </uxap:expandedHeading>

                <uxap:snappedContent>
                    <Text text="" wrapping="true" maxLines="3" />
                </uxap:snappedContent>
                    <uxap:expandedContent>
                        <Text text="" wrapping="true" maxLines="3" />
                    </uxap:expandedContent>

                    <!-- <uxap:actions>
                        <Toolbar style="Clear">
                            <ToolbarSpacer/>
                                <Button  icon="sap-icon://action" iconFirst="true"  press="{=null}" />
                        </Toolbar>
                    </uxap:actions> -->
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>

        <uxap:headerContent>
            <!-- entet filter bar -->
             <filterbar:FilterBar id="filterbar_territory" useToolbar="false" showRestoreButton="false" showGoOnFB="true" >
                    <filterbar:filterGroupItems>
                        <filterbar:FilterGroupItem  name="search" label="" groupName="q"  visibleInFilterBar="true">
                            <filterbar:control>
                                <SearchField placeholder="search" showSearchButton="true"/>
                            </filterbar:control>
                        </filterbar:FilterGroupItem>
                        <!-- 2 -->
                        <filterbar:FilterGroupItem  name="territory_role" label="Territory" groupName="q"  visibleInFilterBar="true">
                            <filterbar:control>
                               <Input showValueHelp="true" showSuggestion="false" type="Text" showClearIcon="false"/>
                            </filterbar:control>
                        </filterbar:FilterGroupItem>

                    </filterbar:filterGroupItems>
             </filterbar:FilterBar>
        </uxap:headerContent>

        <!-- block content -->
         <uxap:sections>
            <uxap:ObjectPageSection  showTitle="false">
                <!-- <uxap:customAnchorBarButton>
                    <Button text="Manager Data"></Button>
                </uxap:customAnchorBarButton> -->
                <uxap:ObjectPageSubSection  showTitle="false" >
                    <uxap:blocks>

                                        <Table 
                                            id="table_territory"
                                            headerText="Territories"
                                            headerLevel="H3"
                                            autoPopinMode="false"
                                            width="100%"
                                            inset="false"
                                            busy="false"
                                            busyIndicatorDelay="100"
                                            items="{/results}"
                                        >
                                        <columns>
                                            <Column visible="true"  minScreenWidth="Phone" width="10%" hAlign="Right">
                                                <Text wrapping="true" text="ID" maxLines="3" tooltip="Territory ID"/>
                                            </Column>

                                            <Column  demandPopin="false" minScreenWidth="Phone" width="30%" >
                                                <Text wrapping="false" text="Name"></Text>
                                            </Column>

                                            <Column  demandPopin="true" minScreenWidth="Phone" width="15%">
                                                <Text wrapping="true" text="Region Name"/>
                                            </Column>

                                            <Column   demandPopin="true" minScreenWidth="Phone" width="auto" hAlign="Center">
                                                <Text wrapping="true" text="No of Employees"/>
                                            </Column>
                                        </columns>
                                        <items>

                                            <ColumnListItem type="Navigation" vAlign="Middle" press=".overViewPage">
                                                <cells>
                                                    <ObjectNumber number="{TerritoryID}" unit="" state="None" ></ObjectNumber>
                                                    <Text text="{TerritoryDescription}" maxLines="3"/>
                                                    <ObjectNumber number="{Region/RegionDescription}" unit="" state="None" ></ObjectNumber>
                                                    <ObjectNumber number="{=${Employees/results}.length}" unit="" state="None" />
                                                    
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                    </uxap:blocks>
                </uxap:ObjectPageSubSection>
            </uxap:ObjectPageSection>
         </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
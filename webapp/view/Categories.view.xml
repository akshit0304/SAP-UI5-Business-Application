<mvc:View xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns:filterbar="sap.ui.comp.filterbar"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    controllerName="bd.businessportal.controller.Categories"
    >
    <uxap:ObjectPageLayout id="category_page" class="sapUiResponsivePadding--header sapUiResponsivePadding--subHeader sapUiResponsivePadding--content sapUiResponsivePadding--footer"
    enableLazyLoading="true"
    beforeNavigate=".navbuttonPressed"
    useIconTabBar="true"
    showTitleInHeaderContent="true"
    upperCaseAnchorBar="true"
    showAnchorBar="false"
    >

        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle >
                <uxap:snappedHeading>
                    <Title text="{nav>/pageTitles/category} Details" wrapping="false" titleStyle="H1" />
                </uxap:snappedHeading>
                <uxap:expandedHeading>
                    <Title text="{nav>/pageTitles/category} Details" wrapping="false" titleStyle="H3" />
                </uxap:expandedHeading>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>

        <uxap:headerContent>
            <!-- entet filter bar -->
             <filterbar:FilterBar id="filterbar_category" useToolbar="false" showRestoreButton="false" showGoOnFB="true" >
                    <filterbar:filterGroupItems>
                        <filterbar:FilterGroupItem  name="category_search" label="" groupName="q"  visibleInFilterBar="true">
                            <filterbar:control>
                                <SearchField placeholder="search" showSearchButton="true"/>
                            </filterbar:control>
                        </filterbar:FilterGroupItem>
                        <!-- 2 -->
                        <filterbar:FilterGroupItem  name="category_filter" label="Category" groupName="q"  visibleInFilterBar="true">
                            <filterbar:control>
                               <Input showValueHelp="true" showSuggestion="false" type="Text" showClearIcon="false"></Input>
                            </filterbar:control>
                        </filterbar:FilterGroupItem>
                    </filterbar:filterGroupItems>
             </filterbar:FilterBar>
        </uxap:headerContent>

        <!-- block content -->
         <uxap:sections>
            <uxap:ObjectPageSection  showTitle="false">
                <!-- <uxap:customAnchorBarButton>
                    <Button text="Manager Data"></Button>
                </uxap:customAnchorBarButton> -->
                <uxap:ObjectPageSubSection   showTitle="false" >
                    <uxap:blocks>

                                        <Table 
                                            id="table_category"
                                            headerText="{nav>category}"
                                            autoPopinMode="false"
                                            width="100%"
                                            inset="false"
                                            enableBusyIndicator="true"
                                            busyIndicatorDelay="200"
                                           items="{/results}"
                                            core:require="{Formatter:'bd/businessportal/model/Formatter'}"
                                        >
                                        
                                        <columns>
                                            <Column visible="true">
                                                <Text wrapping="false" text="Category ID" ></Text>
                                            </Column>
                                            <Column  demandPopin="false" minScreenWidth="Phone">
                                                <Text wrapping="false" text="Category"></Text>
                                            </Column>
                                            <Column  demandPopin="true" minScreenWidth="Tablet">
                                                
                                                <Text wrapping="false" text="Description"/>
                                            </Column>
                                            <Column demandPopin="true" styleClass="sapUiNoMargin"  importance="Low" minScreenWidth="Phone"  hAlign="Center">
                                                <Text wrapping="false" text="No. of Products" tooltip="products under the category"/>
                                            </Column>
                                            <!-- <Column class="sapUiTinyMargin" minScreenWidth="Phone" width="auto">
                                                <Text wrapping="false" text=""></Text>
                                            </Column> -->
                                        </columns>
                                        <items>

                                            <ColumnListItem type="Navigation" press=".overViewPage">
                                                <cells>
                                                        <ObjectIdentifier title="{CategoryID}" visible="true"></ObjectIdentifier>
                                                        <ObjectIdentifier text="{CategoryName}"></ObjectIdentifier>
                                                        <Text text="{Description}" wrapping="true" maxLines="3"/>
                                                       <ObjectNumber 
                                                       number="{:=%{path:'Products/results'}.length}" 
                                                       unit="" state="None" inverted="true"/>
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                    </uxap:blocks>
                </uxap:ObjectPageSubSection>
            </uxap:ObjectPageSection>
         </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
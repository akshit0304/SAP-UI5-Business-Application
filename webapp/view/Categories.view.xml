<mvc:View xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns:filterbar="sap.ui.comp.filterbar"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    controllerName="bd.businessportal.controller.Categories"
>

    <Page
        id="category_page"
        title="{nav>/pageTitles/category}"
        busyIndicatorDelay="100"
        showNavButton="false"
        class="sapUiResponsiveMargin--content sapUiResponsivePadding--content"
            
    >
        <Panel expandable="false" stickyHeader="false" width="auto">

            <List mode="None" id="table_category"
                itemPress="overViewPage" items="{/results}">

                <ObjectListItem
                    title="{CategoryName}"
                    type="Navigation"
                    number="{=${path:'Products/results'}.length}"
                    numberUnit="Products">
                    <ObjectAttribute text="Category ID : {CategoryID}" active="false" />
                    <ObjectAttribute text="{Description}" active="false" />
                </ObjectListItem>

            </List>


            

        </Panel>
    </Page>
</mvc:View>